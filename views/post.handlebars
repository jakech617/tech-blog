<div class="text-center">
  <h2>{{title}}</h2>
  <p>By {{user.username}} on {{format_date date_created}}</p>
  <p>
    {{post_content}}
  </p>
<h3>Leave a Comment:</h3>

    <form id="comment-form"class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content"></label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post!</button>
      </div>
    </form>
  </div>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>By {{user.username}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.comment_text}}
    </p>
  </div>
</div>
<input type="hidden" id="user-id" value="{{ user_id }}"></input>
{{/each}}

<script src="/public/js/comment.js"></script>