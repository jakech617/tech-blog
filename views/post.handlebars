<div class="text-center">
  <h2>{{title}}</h2>
  <p>By {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{content}}
  </p>
<h3>Leave a Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">comment content:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post!</button>
      </div>
    </form>
  </div>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>By {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{content}}
    </p>
  </div>
</div>
{{/each}}
